@inject IStringLocalizer<Menu> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">1z10</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @Localizer.GetString("Home")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="game">
                <span class="bi bi-controller" aria-hidden="true"></span> @Localizer.GetString("Game")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="highscores">
                <span class="bi bi-trophy-fill" aria-hidden="true"></span> @Localizer.GetString("Score board")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-sliders" aria-hidden="true"></span> @Localizer.GetString("Settings")
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="credits">
                <span class="bi bi-info-circle-fill" aria-hidden="true"></span> @Localizer.GetString("Credits")
            </NavLink>
        </div>
    </nav>
</div>
